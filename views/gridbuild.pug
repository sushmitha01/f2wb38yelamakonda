extends layout

block content
  h1= title
  p #{query.rows}  #{query.cols}
  -var rows=Number(query.rows) ;
  -var col=Number(query.cols);
  if !Number.isInteger(rows) || !Number.isInteger(col)
   p Either row or column is not an integer
  else if !(rows<=10 && rows>=1)
   p rows should be in the range 1 to 10
  else if !(col<=10 && col>=1)
   p columns should be in the range 1 to 10
  else
   table#outer
    - for (let i = 0; i < rows; i++) {
       tr#middle
        - for (let j = 0; j < col; j++) {
           td= 1+i+j*rows
        - }
    - }